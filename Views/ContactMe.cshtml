@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.ContactMe>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}
<div class="d-flex column mt-5">
    <div class="me-bg">
        <img class="mb-2 me me-5 img-fluid" src="@Model.ContactMeImage.Url()"/>
    </div>
    <div class=" d-flex align-items-center justify-content-around border-start mx-4">
        <div class=" container">
            <h4 class="mb-4 text-decoration-underline ">Contact Me</h4>
            <div class="d-flex row lign-items-center">
                <h5 class="fw-normal">@Model.Value("fullname")</h5>
                <p class="fst-italic fw-lighter" >@Model.Value("email")</p>
                <br>
                <p class="fw-lighter mb-1">@Model.Value("phoneNr")</p>
                <p>@Model.Value("aboutMeInfo")</p>
            </div>
        </div>
    </div>
</div>

